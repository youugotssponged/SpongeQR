<UserControl x:Class="SpongeQR.PayloadUserControls.MessageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpongeQR.PayloadUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel>
        <Border Name="b"  />
        <TextBox x:Name="MessageTextBox" Text="{Binding MessageText, Mode=TwoWay}" Height="120" MaxWidth="{Binding ActualWidth, ElementName=b}" TextWrapping="Wrap" Width="350" Margin="10,-30,0,0" />
    </StackPanel>
</UserControl>
